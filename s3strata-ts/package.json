{
	"name": "@siwats/s3strata",
	"version": "1.2.0",
	"description": "Object storage abstraction layer with dual-bucket tiered storage and visibility control for Bun/TypeScript",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc --noEmit",
		"lint": "biome lint ./src",
		"lint:fix": "biome lint --write ./src",
		"format": "biome format --write ./src",
		"check": "biome check --write ./src",
		"prepublishOnly": "bun run build",
"test:minio": "bun run src/examples/minio-test.ts"
	},
	"keywords": [
		"s3",
		"object-storage",
		"storage",
		"tiered-storage",
		"hot-cold-storage",
		"file-management",
		"multi-endpoint",
		"bun",
		"typescript"
	],
	"author": "Siwat Sirichai",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SiwatINC/s3strata.git"
	},
	"peerDependencies": {
		"bun": ">=1.0.0"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^24.9.1",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"dependencies": {
		"@biomejs/biome": "^2.3.2"
	}
}
